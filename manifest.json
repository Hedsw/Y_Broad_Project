{
  "name": "Project_dandelion",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": ["<all_urls>", {"fileSystem": ["write","retainEntries","directory"]},"storage","identity"],
  // "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": {"128": "icon_128.png" },
  "file_handlers": {
   "text": {
     "types": [
         "text/*"
     ]
   }
 },
  "kiosk_enabled" : true,
  "kiosk_only" : true
}

